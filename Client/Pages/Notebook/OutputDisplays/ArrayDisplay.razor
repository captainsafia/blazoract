<div class="scroller">
    <table>
        @foreach (var entry in Data)
            @if (entry is Array row) // 2D array
            {
                <tr @key="entry">
                    @foreach (var cell in row)
                    {
                        <td>@cell</td>
                    }
                </tr>
            }
            else // Any other case
            {
                <tr>
                    <td>@entry</td>
                </tr>
            }
        }
    </table>
</div>

@code {
    [Parameter] public ICollection<object> Data { get; set; }
}
